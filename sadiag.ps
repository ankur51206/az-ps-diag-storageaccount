param(
    # Add Resource ID below if you dont want to add multiple database at a time
    #  $resourceID = "", 
    $diagNameLaws = "ankurdiaglaws",
    $diagNameEvent = "ankurdiagevent", 
    # Add your log analytics workspace NAME OR ID here at below
    $laws = "samplelaws",
    # add your eventhub rule ID here
    $eventRule = "/subscriptions/f3d20c9f-3cb5-45df-b6a8-32f7f4e3d1b6/resourceGroups/sample-1/providers/Microsoft.EventHub/namespaces/eventnamespaceankur/authorizationRules/RootManageSharedAccessKey",
    # Add event hub name here    
    $eventHubName = "myeventhubankur",
    [switch]$set
)

      
$metrics = '[{\"category\":\"Transaction\",\"retentionPolicy\":{\"days\":0,\"enabled\":false},\"enabled\":true}]'
$logs = '[{\"category\":\"StorageRead\",\"retentionPolicy\":{\"days\":0,\"enabled\":false},\"enabled\":true},{\"category\":\"StorageWrite\",\"retentionPolicy\":{\"days\":0,\"enabled\":false},\"enabled\":true},{\"category\":\"StorageDelete\",\"retentionPolicy\":{\"days\":0,\"enabled\":false},\"enabled\":true}]'
    
foreach ($resourceID in Get-Content .\filesa.txt) {
    $storage_types = "blobServices", "tableServices", "queueServices", "fileServices"
    foreach ($type in $storage_types) {
        az monitor diagnostic-settings create --resource "$resourceID/$type/default" -n $diagNameLaws --workspace $laws --metrics $metrics
        az monitor diagnostic-settings create --resource "$resourceID/$type/default" -n $diagNameEvent --event-hub-rule $eventRule --event-hub $eventHubName --logs $logs
    }
}
